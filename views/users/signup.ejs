<%layout('Layout/boilerplate')-%>

<div class="row mt -3">
    <h1 class="col-6 offset-3 mt-3">SignUp for Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mt-3">
        <label for="username" class="form-label">Enter Name</label>
        <input
          class="form-control"
          id="username"
          type="text"
          name="username"
          required
        />
        <div class="valid-feedback">Looks good</div>
        <div class="invalid-feedback">name is required!</div>
      </div>
      <div class="mt-3">
        <label for="email" class="form-label">Enter email</label>
        <input
          class="form-control"
          id="email"
          type="text"
          name="email"
          required
        />
        <div class="valid-feedback">Looks good</div>
        <div class="invalid-feedback">email is required!</div>
      </div>
      <div class="mt-3">
        <label for="password" class="form-label">Enter password</label>
        <input
          class="form-control"
          id="password"
          type="text"
          name="password"
          required
        />
        <div class="valid-feedback">Looks good</div>
        <div class="invalid-feedback">password is required!</div>
      </div>

      <button class="btn btn-success mt-3">SignUp</button>
    </form>
    <p class="col-6 offset-3 mt-3">Already have an account?<a href="/login">click here</a></p>
  </div>
</div>
