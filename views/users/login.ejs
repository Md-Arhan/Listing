<%layout('Layout/boilerplate')-%>

<div class="row mt -3">
    <h1 class="col-6 offset-3 mt-3">Login Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation mb-3" novalidate>
      <div class="mt-3">
        <label for="username" class="form-label">Enter Name</label>
        <input
          class="form-control"
          id="username"
          type="text"
          name="username"
          required
        />
        <div class="invalid-feedback">name is required!</div>
      </div>

      <div class="mt-3">
        <label for="password" class="form-label">Enter password</label>
        <input
          class="form-control"
          id="password"
          type="text"
          name="password"
          required
        />
        <div class="invalid-feedback">password is required!</div>
      </div>

      <button class="btn btn-success mt-3">Login</button>
    </form>
     <a class="col-6 offset-5" href="/signup">Create new Account</a>
  </div>
</div>
