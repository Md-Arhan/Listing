<%layout('Layout/boilerplate')-%>
<!-- <h1>All Listings</h1> -->
 <style>
   #filters{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
   }

   .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    opacity: 0.8;
   }

   .filter p{
    font-size: 0.8rem;
   }

   .filter:hover{
    opacity: 1;
    cursor: pointer;
   }

   .tax{
    display: none;
   }

   .toogle-switch{
    border: 0.7px solid grey;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    margin-left:2rem;
    margin-bottom:1rem ;
   }
 </style>

 <div class="filters" id="filters">
  <div class="filter">
    <div>
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </div>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-person-booth"></i>
      <p>Amazing view</p>
    </div>
  </div>
  <div class="filter">
    <div>
    <i class="fa-solid fa-city"></i>
      <p>Iconic City</p>
    </div>
  </div>
  <div class="filter">
    <div>
     <i class="fa-solid fa-person-swimming"></i>
      <p>Amazing pools</p>
    </div>
  </div>
  <div class="filter">
    <div>
     <i class="fa-solid fa-campground"></i>
      <p>Campaign</p>
    </div>
  </div>
  <div class="filter">
    <div>
    <i class="fa-solid fa-cow"></i>
      <p>Farm</p>
    </div>
  </div>
  <div class="filter">
    <div>
     <i class="fa-solid fa-snowflake"></i>
      <p>Arctic</p>
    </div>
  </div>
  <div class="filter">
    <div>
    <i class="fa-solid fa-igloo"></i>
      <p>Domes</p>
    </div>
  </div>
  <div class="filter">
    <div>
     <i class="fa-solid fa-ship"></i>
      <p>Boats</p>
    </div>
  </div>

  <div class="toogle-switch">
    <div class="form-check-reverse form-switch">
     <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
     <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
   </div>
  </div>
 </div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xsm-1">
  <%for(let listing of allListing){%>
  <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col listing-card text-md-center text-start">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top"
        alt="Listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br />
          <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> /
          night 
          <i class="tax text-muted">+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <%}%>
</div>


<script>
  let taxSwitch = document.getElementById("switchCheckDefault");

  taxSwitch.addEventListener("click", ()=>{
     let id = document.getElementsByClassName("tax");
     for(info of id){
      if(info.style.display != "inline"){
        info.style.display = "inline";
      }else{
        info.style.display = "none";
      }
     }
  })
</script>